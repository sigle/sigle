{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": ["/apps/custom-domain/**"],
    "dockerfilePath": "/apps/custom-domain/Dockerfile"
  },
  "deploy": {
    "region": "us-west2",
    "runtime": "V2",
    "numReplicas": 1,
    "limitOverride": {
      "containers": {
        "cpu": 0.5,
        "memoryBytes": 500000000
      }
    },
    "sleepApplication": true,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
