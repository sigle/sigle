{
  "name": "@sigle/server",
  "version": "0.4.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand --forceExit",
    "postinstall": "prisma generate"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "8.3.0",
    "@fastify/static": "6.10.2",
    "@nestjs/cache-manager": "2.0.1",
    "@nestjs/common": "10.0.4",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.0.4",
    "@nestjs/platform-fastify": "10.0.4",
    "@nestjs/swagger": "7.0.12",
    "@nestjs/throttler": "4.1.0",
    "@ntegral/nestjs-sentry": "4.0.0",
    "@prisma/client": "4.12.0",
    "@sentry/node": "7.60.1",
    "@stacks/blockchain-api-client": "7.2.2",
    "cache-manager": "5.2.3",
    "cache-manager-redis-store": "3.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "date-fns": "2.30.0",
    "deep-email-validator": "0.1.21",
    "handlebars": "4.7.7",
    "himalaya": "1.1.0",
    "ioredis": "5.3.2",
    "jsonwebtoken": "9.0.0",
    "micro-stacks": "1.2.1",
    "mjml": "4.14.1",
    "mjml-bullet-list": "1.2.2",
    "nestjs-throttler-storage-redis": "0.3.3",
    "next-auth": "4.10.3",
    "node-mailjet": "5.1.1",
    "nodemailer": "6.9.1",
    "posthog-node": "3.1.1",
    "prisma": "4.12.0",
    "redis": "4.6.7",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "textversionjs": "1.1.3",
    "undici": "5.22.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.0",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.0.4",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.67",
    "@swc/jest": "0.2.26",
    "@types/jest": "29.5.0",
    "@types/jsonwebtoken": "9.0.1",
    "@types/node": "18.15.11",
    "@types/nodemailer": "6.4.7",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.5.0",
    "leaked-handles": "5.2.0",
    "prettier": "3.0.0",
    "source-map-support": "0.5.21",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6",
    "webpack": "5.88.1"
  }
}
