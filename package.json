{
  "name": "sigle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "now dev",
    "build": "next build",
    "test": "yarn test:lint",
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "prettier": "prettier --write '**/*.{js,ts,tsx,md,css}'",
    "test:lint": "eslint 'src/**/*.{js,ts,tsx}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "resolutions": {
    "@types/slate": "0.47.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@reach/dialog": "0.6.2",
    "@sentry/browser": "5.9.1",
    "@tippy.js/react": "3.1.1",
    "blockstack": "19.3.0",
    "date-fns": "2.8.1",
    "fathom-client": "1.0.0",
    "history": "4.10.1",
    "immutable": "4.0.0-rc.12",
    "nanoid": "2.1.7",
    "next": "9.1.4",
    "next-seo": "3.0.0",
    "nprogress": "0.2.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-dropzone": "10.2.1",
    "react-icons": "3.8.0",
    "react-spring": "8.0.27",
    "react-toastify": "5.4.1",
    "slate": "0.47.9",
    "slate-html-serializer": "0.8.11",
    "slate-plain-serializer": "0.7.11",
    "slate-react": "0.22.10",
    "slate-soft-break": "0.9.0",
    "styled-components": "4.4.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@types/nanoid": "2.1.0",
    "@types/node": "12.12.12",
    "@types/nprogress": "0.2.0",
    "@types/react": "16.9.13",
    "@types/react-dom": "16.9.4",
    "@types/slate": "0.47.4",
    "@types/slate-html-serializer": "0.6.3",
    "@types/slate-plain-serializer": "0.6.1",
    "@types/slate-react": "0.22.8",
    "@types/styled-components": "4.4.0",
    "@typescript-eslint/eslint-plugin": "2.8.0",
    "@typescript-eslint/parser": "2.8.0",
    "@zeit/next-bundle-analyzer": "0.1.2",
    "@zeit/next-css": "1.0.1",
    "babel-plugin-macros": "2.7.1",
    "babel-plugin-styled-components": "1.10.6",
    "dotenv": "8.2.0",
    "eslint": "6.7.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "husky": "3.1.0",
    "lint-staged": "9.4.3",
    "next-compose-plugins": "2.2.0",
    "prettier": "1.19.1",
    "tailwind.macro": "1.0.0-alpha.10",
    "tailwindcss": "1.1.3",
    "typescript": "3.7.2"
  }
}
