{
  "private": true,
  "scripts": {
    "prettier": "prettier --write '**/*.{json,md,js,ts,jsx,tsx,yml,css}'",
    "deploy:blog-viewer": "flyctl deploy --config blog-viewer/fly.toml --dockerfile blog-viewer/Dockerfile",
    "deploy:sigle": "flyctl deploy --config sigle/fly.toml --dockerfile sigle/Dockerfile",
    "postinstall": "husky install"
  },
  "workspaces": [
    "sigle",
    "blog-viewer"
  ],
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{json,md,js,ts,jsx,tsx,yml,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2"
  }
}
