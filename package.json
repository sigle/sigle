{
  "private": true,
  "scripts": {
    "prettier": "prettier --write '**/*.{json,md,js,ts,jsx,tsx,yml,css}'",
    "deploy:sigle": "flyctl deploy --config sigle/fly.toml --dockerfile sigle/Dockerfile",
    "deploy:ceramic-staging": "flyctl deploy --config sigle-next/fly.ceramic.staging.toml --dockerfile sigle-next/ceramic/staging.ceramic.Dockerfile",
    "version": "pnpm changeset version && pnpm install --lockfile-only",
    "release": "pnpm changeset publish",
    "postinstall": "husky install"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{json,md,js,ts,jsx,tsx,yml,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "2.25.0",
    "husky": "8.0.1",
    "lint-staged": "12.4.1",
    "prettier": "2.8.1"
  }
}
